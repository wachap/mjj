    <h2 class="c-site-section__title u-color-tertiary u-center js-sr-contact">Contactanos</h2>
    <ul class="o-grid o-grid--gutter-5 u-list-reset u-white u-fw-light">
      <li class="o-grid__item u-12/12 u-4/12@tablet js-sr-contact">
        <h3 class="u-mt0 u-uppercase">Telefono</h3>
        <p class="u-fz-sm">#{htmlWebpackPlugin.options.data.phoneNumber}</p>
      </li>
